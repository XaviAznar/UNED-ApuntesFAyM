\begin_inset Formula 
\begin{eqnarray*}
a_{1}\left(t\right) & = & a_{10}+\rho a_{1}^{1}\left(t\right)=a_{10}+\frac{1}{i\hbar}a_{20}\int_{0}^{t}\rho\tilde{W}_{12}dt\\
a_{2}\left(t\right) & = & a_{20}+\rho a_{2}^{1}\left(t\right)=a_{20}+\frac{1}{i\hbar}a_{10}\int_{0}^{t}\rho\tilde{W}_{21}dt
