\begin_layout Standard
Aplicando la fórmula anterior vamos a calcular las primeras funciones radiales
 normalizadas.
\end_layout

\begin_layout Subsection
Caso en que 
\begin_inset Formula $n=1$
\end_inset

, 
\begin_inset Formula $l=0$
\end_inset


\begin_inset Formula 
\[
L_{0}^{1}\left(2\frac{Z}{a}r\right)=\frac{1}{0!}\left(2\frac{Z}{a}r\right)^{-1}\exp\left(2\frac{Z}{a}r\right)\frac{d^{0}}{d\left(2\frac{Z}{a}r\right)^{0}}\left[\left(2\frac{Z}{a}r\right)^{1}\exp\left(-2\frac{Z}{a}r\right)\right]=1
\]

\end_inset


\begin_inset Formula 
\[
R_{1,0}\left(r\right)=\sqrt{\frac{0!}{1!\times2}}\left(2\frac{Z}{a}\right)^{3/2}r^{0}\exp\left(-\frac{Z}{a}r\right)=2\left(\frac{Z}{a}\right)^{3/2}\exp\left(-\frac{Z}{a}r\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
Caso en que 
\begin_inset Formula $n=2$
\end_inset

, 
\begin_inset Formula $l=0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
L_{1}^{1}\left(\frac{Z}{a}r\right) & = & \frac{1}{1!}\left(\frac{Z}{a}r\right)^{-1}\exp\left(\frac{Z}{a}r\right)\frac{d^{1}}{d\left(\frac{Z}{a}r\right)^{1}}\left[\left(\frac{Z}{a}r\right)^{2}\exp\left(-\frac{Z}{a}r\right)\right]=\\
 & = & 2\left(1-\frac{Z}{2a}r\right)
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
R_{2,0}\left(r\right) & = & \sqrt{\frac{1!}{2!\times4}}\left(\frac{Z}{a}\right)^{3/2}r^{0}\exp\left(-\frac{Z}{2a}r\right)2\left(1-\frac{Z}{2a}r\right)=\\
 & = & \frac{1}{\sqrt{2}}\left(\frac{Z}{a}\right)^{3/2}\left(1-\frac{Z}{2a}r\right)\exp\left(-\frac{Z}{2a}r\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
Caso en que 
\begin_inset Formula $n=2$
\end_inset

, 
\begin_inset Formula $l=1$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
L_{0}^{3}\left(\frac{Z}{a}r\right)=1
\]

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
R_{2,1}\left(r\right) & = & \sqrt{\frac{0!}{3!\times4}}\left(\frac{Z}{a}\right)^{5/2}r^{1}\exp\left(-\frac{Z}{2a}r\right)=\\
 & = & \frac{1}{2\sqrt{6}}\left(\frac{Z}{a}\right)^{5/2}r\,\exp\left(-\frac{Z}{2a}r\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
Caso en que 
\begin_inset Formula $n=3$
\end_inset

, 
\begin_inset Formula $l=0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
L_{2}^{1}\left(\frac{2}{3}\frac{Z}{a}r\right) & = & \frac{1}{2!}\left(\frac{2}{3}\frac{Z}{a}r\right)^{-1}\exp\left(2\frac{Z}{a}r\right)\frac{d^{2}}{d\left(\frac{2}{3}\frac{Z}{a}r\right)^{3}}\left[\left(\frac{2}{3}\frac{Z}{a}r\right)^{3}\exp\left(-\frac{2}{3}\frac{Z}{a}r\right)\right]=\\
 & = & \frac{1}{2}\left(6-6\left(\frac{2}{3}\frac{Z}{a}r\right)+\left(\frac{2}{3}\frac{Z}{a}r\right)^{2}\right)
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
R_{3,0}\left(r\right) & = & \sqrt{\frac{2!}{3!\times6}}\left(\frac{2}{3}\right)^{3/2}\left(\frac{Z}{a}\right)^{3/2}\exp\left(-\frac{Z}{3a}r\right)\times\\
 &  & \times\frac{1}{2}\left[6-6\left(\frac{2}{3}\frac{Z}{a}r\right)+\left(\frac{2}{3}\frac{Z}{a}r\right)^{2}\right]=\\
 & = & \frac{2}{3\sqrt{3}}\left(\frac{Z}{a}\right)^{3/2}\left(1-\frac{2}{3}\frac{Z}{a}r+\frac{2}{27}\frac{Z^{2}}{a^{2}}r^{2}\right)\exp\left(-\frac{Z}{3a}r\right)
\end{eqnarray*}

\end_inset


\end_layout

